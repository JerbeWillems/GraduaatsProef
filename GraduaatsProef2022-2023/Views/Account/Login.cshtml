@model GraduaatsProef2022_2023.Models.Account
@{
    ViewData["Title"] = "Login";
}

<div class="text-center text-white">
    <div class="m-5">
        <h1>Login</h1>
    </div>
    <h3 class="m-5">Fill in the blanks</h3>
    <div class="login">
        <div class="text-center m-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-warning"></div>
                <div class="form-group m-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control text-black" />
                    <span asp-validation-for="Email" class="text-warning"></span>
                </div>
                <div class="form-group m-4">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" class="form-control text-black" />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="login-btn" />
                </div>
                <div class="form-group">
                    <span class="text-warning">@ViewBag.Error</span>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-controller="Home" asp-action="Index" class="text-white">Terug naar homepagina</a>
    </div>
</div>

