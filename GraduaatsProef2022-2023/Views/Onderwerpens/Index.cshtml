                        @Html.DisplayFor(modelItem => item.Foto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Actie)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.OnderwerpId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

